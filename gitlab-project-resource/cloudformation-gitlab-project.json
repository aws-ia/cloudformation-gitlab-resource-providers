{
    "typeName": "CloudFormation::GitLab::Project",
    "description": "Gitlab Project Management",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
    "definitions": {
        "Credentials": {
            "type": "object",
            "properties": {
                "HostUrl": {
                    "description": "URL of the GitLab Server",
                    "type": "string"
                },
                "AuthToken": {
                    "description": "Authentication Token",
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "Name": {
            "description": "The name of the project",
            "type": "string",
            "maxLength": 64
        },
        "Id": {
            "description": "The ID of the project",
            "type": "integer"
        }
    },
    "additionalProperties": false,
    "required": [
        "Name"
    ],
    "readOnlyProperties": [
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "gitlab:CreateProject"
            ]
        },
        "read": {
            "permissions": [
                "gitlab:DescribeProject"
            ]
        },
        "update": {
            "permissions": [
                "gitlab:UpdateProject"
            ]
        },
        "delete": {
            "permissions": [
                "gitlab:DeleteProject"
            ]
        },
        "list": {
            "permissions": [
                "gitlab:ListProjects"
            ]
        }
    },
    "typeConfiguration": {
        "properties": {
            "GitLabAuthentication": {
                "$ref": "#/definitions/Credentials"
            }
        },
        "additionalProperties": false,
        "required": [
            "GitLabAuthentication"
        ]
    }
}